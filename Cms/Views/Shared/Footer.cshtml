@model Model.Entities.Empresa
<!-- Start Footer Section -->
<div class="row">
    <div class="col-md-12">
        <div class="footer-section">

            <div class="row">

                <div class="col-md-3 col-sm-6">
                    <div class="footer-address">
                        <h3>Ubicación</h3>
                        <address>
                            <strong>@Model.Nombre</strong><br>
                            @Model.NumeroCalle @Model.Calle, @Model.Colonia<br>
                            @Model.Ciudad, @Model.Estado, @Model.Pais<br>
                        </address>

                        <address>
                            <strong>Teléfono :</strong>@Model.Telefono <br>
                            <strong>Celular :</strong> @Model.Celular<br>
                            <strong>E-mail :</strong> @Model.Correo
                        </address>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-gallery">
                        <h3>Galería</h3>
                        <ul>
                            @foreach( var item in @Model.Contenido.Where(x => x.idCategoria == 9)) { 
                            <li>
                                <a href="~/Uploads/Galeria/@item.Imagen" data-lightbox="@item.Titulo">
                                    <img src="~/Uploads/Galeria/@item.Imagen" class="img-responsive" alt="" style="width:81px;height:54px;">
                                </a>
                            </li>
                            }
                          
                        </ul>

                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-link">
                        <h3>Links de interés</h3>
                        <ul>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>At vero eos et accusamus et</a></li>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>Dignissimos ducimus qui blanditiis</a></li>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>Voluptatum deleniti atque</a></li>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>Occaecati cupiditate non provident</a></li>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>Similique sunt in</a></li>
                            <li><a href="#"><i class="fa fa-chevron-circle-right"></i>Et harum quidem rerum facilis</a></li>
                        </ul>
                    </div>
                </div>

                <div class="col-md-3 col-sm-6">
                    <div class="footer-social">
                        <h3>Redes Sociales</h3>
                        <ul>
                            <li><a href="@Model.Facebook"><i class="fa fa-facebook"></i></a></li>
                            <li><a href="@Model.Twitter"><i class="fa fa-twitter"></i></a></li>
                            <li><a href="@Model.LinkedIn"><i class="fa fa-linkedin"></i></a></li>
                            
                        </ul>
                      
                    </div>
                </div>

            </div>

        </div>
    </div>
</div>
<!-- End Footer Section -->